{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "lib": ["esnext", "dom"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es5"
    }
}
